/* pages/movie/movie.wxss */
.title{
  border-bottom: 1px solid #f6f6f6;
  color: #666;
}
.icon{
  font-size: 45rpx
}
/* 一部电影区域 */
.movie{
  display: flex; /*当前区域弹性布局*/
  padding: 10px; /*上下左右 10px内补丁*/
  border-bottom: 1px solid #ccc; /*下划线*/
}
/* 电影图片 */
.movie-img{
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;  /*与右侧文字间距*/
}
/* 电影介绍 */
.movie-info{
  flex:1;  /*将右侧区域分配 info 介绍*/
  font-size:28rpx;
  line-height: 1.8; /*行高*/
}
/* 电影标题 */
.movie-title{
  color:#666;
  font-size: 40rpx;
  font-weight: bolder;
}
/* 电影评分 */
.movie-score{
  color: #faaf00;
}
/* 电影详情按钮 */
.movie-comment{
  height: 60rpx;
  background: #e54847;
  color:#fff;
  font-size: 26rpx;
  margin-top: 40rpx;
}