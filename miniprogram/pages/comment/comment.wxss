/* pages/comment/comment.wxss */
/* 背景图片 */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx);/*模糊滤镜*/
  opacity: 0.9;
}
/* 遮罩层 */
.detail-mask{
  position: absolute;
  width:100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
/* 电影详情列表 */
.detail-info{
  position:absolute;
  display: flex;
  top: 0;
  left:0;
  width: 100%;
  height: 400rpx;
  padding: 20rpx;
}
.detail-image{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}
/* 右侧区域 占满剩余空间 */
.detail{
  flex-grow: 1;
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}
.actor .actor-img{
  padding: 10rpx;
  font-size: 24rpx;
  color: #aaa;
  text-align: center;
  display: flex;
  justify-content: space-around;
  flex-wrap: no-wrap;
}
.actor_title{
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}
.actor image{
  width:120rpx;
  height: 150rpx;
  margin: 5rpx;
}
van-panel view{
  font-size: 28rpx;
}
van-panel view:last-child{
  padding: 10rpx;
}
.comment{
  padding: 30rpx 30rpx 0;
  font-size: 32rpx;
  font-weight: 700;
}
.comment_img{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx;
}
.comment-img{
  padding: 2rpx 5rpx;
}
.comment-img image{
  height:220rpx;
  width:220rpx;
  border:1px solid #eee;
}
.btn{
  display: block;
  width: 100%;
}